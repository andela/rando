<% if @user_id %>
  $("#modal-window").html("<%= escape_javascript(render 'withdraw_money') %>");
  $("#modal-window").modal();
<% end %>

$("#withdraw_btn").on("click", function() {
  $("#amount").addClass("hidden");
  $("#confirm").removeClass("hidden");

  $("#confirm_amount").html($('#amount_field').val());
  $("#user_name").html("<%= @user_id.first_name %>").val();
});
