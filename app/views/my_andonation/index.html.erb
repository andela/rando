<h2>My Campaigns</h2>
<table class="table table-bordered">
  <tr>
    <th>Title</th>
    <th>Amount Needed</th>
    <th>Created</th>
    <th>Deadline</th>
  </tr>
  <% @campaigns.each do |campaign| %>
    <tr>
      <td><%= link_to campaign.title, campaign %></td>
      <td><%= campaign.amount %></td>
      <td><%= formatted_date(campaign.created_at) %></td>
      <td><%= campaign.deadline %></td>
    </tr>
  <% end %>
</table>