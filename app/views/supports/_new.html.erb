<div class="modal-dialog">
  <div class="modal-content">
    <div class="modal-body text-center">

      <div>
        You have a balance of . How much would you like to give to this campaign?
      </div><br>

      <%= form_tag campaign_support_path do %>
        <div>
          <%= hidden_field_tag "campaign_id", @campaign_id %>
          <%= label_tag '$' %>
          <%= number_field_tag :raised, params[:raised], required: true, max: @needed, min: 1 %>
        </div>
        <button type="button" class="btn btn-default" data-dismiss="modal">Cancel</button>
        <%= submit_tag "$ Support!", class: "btn btn-default btn-success" %>
      <% end %>

    </div>
  </div>
</div>