<div class="row">
  <div class="col-lg-12">
    <h1><%= @campaign.uppercase_title %></h1>
    <p><i><%= "Created by: #{@campaign.user_name}" %></i></p>
    <p><i><%= "Deadline: #{@campaign.formatted_deadline}" %></i></p>
  </div>
  <div class="col-lg-7 description" >
    <p><%= "#{@campaign.description}" %></p>
  </div>
  <div class="col-lg-5">
    <div>
      <p><%= "Needs: $#{@campaign.amount}" %></p>
    </div>
    <div class="video-container">
      <iframe width="560" height="315" src="<%= @campaign.embedded_youtube_url %>" frameborder="0" allowfullscreen></iframe>
    </div>
  </div>
</div>
