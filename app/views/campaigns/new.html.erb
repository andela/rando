<h1>New Campaign</h1>

<%= form_for @campaign do |f| %>
  <div class="form-group">
    <%= f.label :title %>
    <div class="col-sm-10">
      <%= f.text_field :title %>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :deadline %>
    <div class="col-sm-10">
      <%= f.text_field :deadline %>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :amount, 'How much do you need to raise?' %>
    <div class="col-sm-10">
      <%= f.text_field :amount %>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :description %>
    <div class="col-sm-10">
      <%= f.text_area :description %>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :youtube_url, 'YouTube URL' %>
    <div class="col-sm-10">
      <%= f.text_field :youtube_url %>
    </div>
  </div>

  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <%= f.submit %>
    </div>
  </div>

<% end %>